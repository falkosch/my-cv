{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "enableResourceInlining": true,
    "skipTemplateCodegen": true
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts"
  ]
}
